.container
  .row
    %h2{:style => "text-align: center"} Members Available for Gigs
  .row
    .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-12.-col-xs-12
      - @dj_portfolios.each do |dj_portfolio|
        .row{:style => "background-color: var(--lightest-blue);"}
          .col-lg-4.col-md-4.col-sm-4.col-xs-4
            = image_tag dj_portfolio.avatar.thumb.url
          .col-lg-8.col-md-8.col-sm-8.col-xs-8
            %br
            %h3{:style => "text-align: left" }= dj_portfolio.name
            %p= dj_portfolio.genres.join(", ")
        %br
      
  .row
    %table{:align => "center"}
      %thead
        %tr
          %th Profile Picture
          %th Name
          %th Genres
          %th{:colspan => "9"}
      %tbody
        - @dj_portfolios.each do |dj_portfolio|
          %tr
            %td= image_tag dj_portfolio.avatar.thumb.url
            %td= dj_portfolio.name
            %td= dj_portfolio.genres.join(", ") 
            %td= link_to 'Show', dj_portfolio
  
  
  -if user_current && user_valid
    = link_to 'New Dj portfolio', new_dj_portfolio_path
    = link_to 'Back', root_path
  -else
    = link_to 'Back', root_path

