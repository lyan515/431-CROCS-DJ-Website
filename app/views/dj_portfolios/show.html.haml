- 3.times do
  %br
  
.container
  .row
    .col-lg-2.col-lg-offset-4.col-md-12.col-sm-12.col-xs-12
      .profile-pic
        = image_tag @dj_portfolio.avatar.profile.url
    .col-lg-3.col-md-12.col-sm-12.col-xs-12
      %h3
        = @dj_portfolio.name
      %h5
        = @dj_portfolio.genres.join(", ")
      %p
        = @dj_portfolio.bio
    .link-icon
      /= link_to image_tag("facebook.png"), @dj_portfolio.facebook_link, class: 'nav-link', target: :_blank
      = link_to image_tag("facebook.png", width: '15%'),  @dj_portfolio.facebook_link, class: 'nav-link', target: :_blank
      = link_to image_tag("instagram.png", width: '15%'),  @dj_portfolio.instagram_link, class: 'nav-link', target: :_blank
      = link_to image_tag("twitter.png", width: '15%'),  @dj_portfolio.twitter_link, class: 'nav-link', target: :_blank
      = link_to image_tag("soundcloud.png", width: '15%'),  @dj_portfolio.soundcloud_link, class: 'nav-link', target: :_blank
      = link_to image_tag("mixcloud.png", width: '15%'),  @dj_portfolio.mixcloud_link, class: 'nav-link', target: :_blank
    %p
      %strong genres:
      = @dj_portfolio.genres.join(", ") 
    
    -if user_current && user_valid
      = link_to 'Edit', edit_dj_portfolio_path(@dj_portfolio)
      = link_to 'Delete', @dj_portfolio, method: :delete, data: { confirm: 'Are you sure?' }
      = link_to 'Back', dj_portfolios_path
    -else
      = link_to 'Back', dj_portfolios_path
